<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="@string/PREFERENCES_ID_ENABLE_MUTE_SERVICE"
        android:title="@string/PREFERENCES_TITLE_ENABLE_MUTE_SERVICE"
        android:defaultValue="true"
        />

    <SwitchPreference
        android:key="@string/PREFERENCES_ID_DISABLE_NOTIFICATION_PERSIST"
        android:title="@string/PREFERENCES_TITLE_DISABLE_NOTIFICATION_PERSIST"
        android:defaultValue="false"
        />

    <SeekBarPreference
        android:key="@string/PREFERENCES_ID_DISABLE_SPEAKER_VOLUME"
        android:title="@string/PREFERENCES_TITLE_DISABLE_SPEAKER_VOLUME"
        android:defaultValue="20"
        android:max="100"
    />
</PreferenceScreen>
